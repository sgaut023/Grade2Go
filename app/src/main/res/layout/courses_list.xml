<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:background="@drawable/shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2.5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="match_parent"
                android:layout_height="188dp"


                android:scaleType="centerCrop"
                app:srcCompat="@drawable/img_default" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:paddingBottom="2.5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txt_cours_name"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:background="#fefefe"
                android:gravity="left|center_vertical|center_horizontal"
                android:paddingLeft="16dp"
                android:text="SEG 3541"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_txt_grade"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:background="#fefefe"
                android:gravity="left|center_vertical|center_horizontal"
                android:paddingLeft="16dp"
                android:text="Current Grade:"
                android:textColor="#85000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_grade"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.36"
                android:gravity="left"
                android:text="A+"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_list_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="100dp"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_txt_goal"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:background="#fefefe"
                android:gravity="left|center_vertical|center_horizontal"
                android:paddingLeft="16dp"
                android:text="Goal: "
                android:textColor="#85000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_goal"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="9.14"
                android:gravity="left"
                android:text="A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_list_grade_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="100dp"
                android:text="TextView" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
