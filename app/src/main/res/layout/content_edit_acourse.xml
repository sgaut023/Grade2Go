<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uottawa.gradetogo.EditACourse"
    tools:showIn="@layout/activity_edit_acourse">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewEditCourse"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#80000000"
                android:contentDescription="Hello"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/course_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:ems="10"
                android:hint="Enter your course name"
                android:inputType="text"
                android:selectAllOnFocus="false"
                android:textColor="?android:attr/textColorHint"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:text="Enter your objective for this course:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Goal :"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/course_edit_goal"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:ems="10"
                    android:gravity="left|right"
                    android:inputType="numberDecimal"
                    android:selectAllOnFocus="false"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="%"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="1dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/txt_evaluations_order"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Evaluation"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.24"
                    android:gravity="center"
                    android:text="Weight"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Grade"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <ListView
                    android:id="@+id/ListViewEditCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="30dp">


                <Button
                    android:id="@+id/btn_edit_evaluation"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimaryDark"
                    android:elevation="6dp"
                    android:text="Number of rating components"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center"
                android:orientation="horizontal"
                android:paddingBottom="30dp">

                <Button
                    android:id="@+id/btn_editsave_semester"
                    android:layout_width="200dp"
                    android:layout_height="33dp"
                    android:background="@color/colorPrimaryDark"
                    android:elevation="6dp"
                    android:text="Save Course"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    </ScrollView>








